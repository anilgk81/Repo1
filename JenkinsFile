def gv
pipeline {
    agent any
    parameters {
        choice(name: 'VERSION', choices: ['1.0.1', '1.1.1', '1.2.1'], description: 'Version to use')
        booleanParam(name: 'executeTests', defaultValue: true, description: '')
    }

    stages {
        stage('init') {
            gv = load."script.groovy"
        }
        stage('build') {
            steps {
                script {
                    gv.buildApp()
                }
            }
        }
        
        stage('test') {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                script {
                    gv.testApp()
                }
            }
        }
        
        stage('deploy') {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }
}
